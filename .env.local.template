# DAFF Local Environment Configuration Template
# Copy this file to .env.local and update the values

# Database Configuration
# Replace with your actual database credentials
DATABASE_URL="postgresql://daff_user:your_secure_password@localhost:5432/daff_local"

# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Security Configuration
# Generate a random 32+ character string
SESSION_SECRET="your-random-session-secret-here-32-chars-minimum"

# Local Storage Paths
EVIDENCE_STORAGE_PATH="./local_storage/evidence"
BACKUP_STORAGE_PATH="./local_storage/backups"
LOG_STORAGE_PATH="./local_storage/logs"
TEMP_STORAGE_PATH="./local_storage/temp"

# Application Settings
MAX_FILE_SIZE=104857600
MAX_CONCURRENT_UPLOADS=5
SESSION_TIMEOUT=3600000

# Local Operation Mode
LOCAL_ONLY=true
DISABLE_EXTERNAL_APIS=true

# Optional: AI Features (requires OpenAI API key)
# Uncomment and add your OpenAI API key if you want AI analysis features
# OPENAI_API_KEY="your-openai-api-key-here"

# Optional: Advanced Settings
# COMPRESSION_ENABLED=true
# BACKUP_RETENTION_DAYS=30
# LOG_RETENTION_DAYS=7
# AUTO_BACKUP_INTERVAL=24

# Database Pool Configuration
# DB_POOL_MIN=2
# DB_POOL_MAX=10
# DB_QUERY_TIMEOUT=10000

# Security Settings
# BCRYPT_ROUNDS=12
# JWT_EXPIRES_IN=1h
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=900000

# Performance Settings
# CACHE_TTL=3600
# COMPRESSION_LEVEL=6
# MAX_REQUEST_SIZE=50mb